  <div class="card shadow" style="box-shadow: 0 2px 8px rgba(0,0,0,0.08);">
    <div class="card-body">
      <h2>Student Dashboard</h2>
      <% if (exam) { %>
        <p>Active Exam: <%= exam.course %></p>
        <a href="/student/exam" class="btn btn-primary">Take Exam</a>
