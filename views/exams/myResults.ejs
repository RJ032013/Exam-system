<%- include('../partials/header', { title: 'My Results' }) %>

<div class="row">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2><i class="bi bi-award"></i> My Exam Results</h2>
            <a href="/exams" class="btn btn-outline-secondary"><i class="bi bi-arrow-left"></i> Back to Exams</a>
        </div>
    </div>
</div>

<div class="row">
    <% if (!submissions || submissions.length === 0) { %>
        <div class="col-12">
            <div class="alert alert-info">
                <i class="bi bi-info-circle"></i> You have no submitted exams yet.
            </div>
        </div>
    <% } else { %>
        <% submissions.forEach(s => { %>
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title"><i class="bi bi-file-earmark-text"></i> <%= s.exam ? s.exam.title : 'Exam' %></h5>
                        <p class="card-text text-muted mb-2"><%= s.exam ? s.exam.description : '' %></p>
                        <div class="mt-auto d-flex justify-content-between align-items-center">
                            <span class="badge bg-primary">Score: <%= s.score %> / <%= s.totalQuestions %></span>
                            <a href="/exams/results/<%= s._id %>" class="btn btn-sm btn-outline-primary">
                                <i class="bi bi-eye"></i> View Details
                            </a>
                        </div>
                        <div class="text-muted mt-2" style="font-size: 0.9rem;">
                            Submitted: <%= new Date(s.submittedAt).toLocaleString() %>
                        </div>
                    </div>
                </div>
            </div>
        <% }); %>
    <% } %>
</div>

<%- include('../partials/footer') %>


