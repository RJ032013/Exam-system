<%- include('../partials/header', { title: 'Available Exams' }) %>

<div class="row">
    <div class="col-12">
        <h2 class="mb-4">
            <i class="bi bi-list-check"></i> Available Exams
        </h2>
    </div>
</div>

<div class="row">
    <% if (exams.length === 0) { %>
        <div class="col-12">
            <div class="alert alert-info">
                <i class="bi bi-info-circle"></i> No exams available at the moment.
            </div>
        </div>
    <% } else { %>
        <% exams.forEach(exam => { %>
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">
                            <i class="bi bi-file-earmark-text"></i> <%= exam.title %>
                        </h5>
                        <% if (exam.subject) { %>
                            <p class="text-muted mb-2"><i class="bi bi-journal-text"></i> Subject: <%= exam.subject %></p>
                        <% } %>
                        <p class="card-text"><%= exam.description %></p>
                        <ul class="list-unstyled">
                            <li><i class="bi bi-clock"></i> Duration: <%= exam.duration %> minutes</li>
                            <li><i class="bi bi-question-circle"></i> Questions: <%= exam.questions.length %></li>
                            <li><i class="bi bi-person"></i> Created by: <%= exam.createdBy.username %></li>
                        </ul>
                    </div>
                    <div class="card-footer bg-transparent">
                        <% if (user && user.role === 'admin') { %>
                            <a href="/admin/manage-exams" class="btn btn-outline-secondary w-100" title="Admins manage exams, not take them">
                                <i class="bi bi-shield-lock"></i> Admin: Manage Exams
                            </a>
                        <% } else { %>
                            <a href="/exams/take/<%= exam._id %>" class="btn btn-primary w-100 start-exam-btn" data-exam-id="<%= exam._id %>">
                                <i class="bi bi-play-circle"></i> Start Exam
                            </a>
                        <% } %>
                    </div>
                </div>
            </div>
        <% }); %>
    <% } %>
</div>

<script>
// If admin resets a student's submission, auto-redirect the student to start the exam
try {
  if (window.__appSocket) {
    window.__appSocket.on('submission:reset', function(payload){
      if (!payload || !payload.examId) return;
      window.location.href = '/exams/take/' + payload.examId;
    });
  }
} catch (e) {}

// Auto fullscreen on Start Exam button click
(function() {
  // Cross-platform fullscreen request function
  function requestFullscreen(element) {
    if (!element) element = document.documentElement;
    
    // Try standard API first
    if (element.requestFullscreen) {
      return element.requestFullscreen().catch(err => {
        console.log('Standard fullscreen failed:', err);
        return null;
      });
    }
    
    // WebKit (Safari, Chrome on iOS)
    if (element.webkitRequestFullscreen) {
      return element.webkitRequestFullscreen().catch(err => {
        console.log('WebKit fullscreen failed:', err);
        return null;
      });
    }
    
    // WebKit (iOS Safari)
    if (element.webkitEnterFullscreen) {
      element.webkitEnterFullscreen();
      return Promise.resolve();
    }
    
    // MS (IE/Edge)
    if (element.msRequestFullscreen) {
      return element.msRequestFullscreen().catch(err => {
        console.log('MS fullscreen failed:', err);
        return null;
      });
    }
    
    // Mozilla (Firefox)
    if (element.mozRequestFullScreen) {
      return element.mozRequestFullScreen().catch(err => {
        console.log('Mozilla fullscreen failed:', err);
        return null;
      });
    }
    
    return Promise.reject('Fullscreen not supported');
  }

  // Check if already in fullscreen
  function isFullscreen() {
    return !!(
      document.fullscreenElement ||
      document.webkitFullscreenElement ||
      document.mozFullScreenElement ||
      document.msFullscreenElement
    );
  }

  // Handle Start Exam button clicks
  document.querySelectorAll('.start-exam-btn').forEach(btn => {
    btn.addEventListener('click', function(e) {
      e.preventDefault();
      const examUrl = this.getAttribute('href');
      
      // Mark that we should request fullscreen on exam page load
      // Use a timestamp to track when the request was made
      sessionStorage.setItem('requestFullscreenOnLoad', 'true');
      sessionStorage.setItem('fullscreenRequestTime', Date.now().toString());
      
      // Don't request fullscreen here - it will be lost during navigation
      // Instead, navigate immediately and let the exam page handle it
      // The user gesture context will be preserved via sessionStorage
      window.location.href = examUrl;
    });
  });
})();
</script>

<%- include('../partials/footer') %>