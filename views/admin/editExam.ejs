<%- include('../partials/header', { title: 'Edit Exam' }) %>

<div class="row">
    <div class="col-12">
        <h2 class="mb-4">
            <i class="bi bi-pencil-square"></i> Edit Exam
        </h2>
    </div>
</div>

<form id="examForm" action="/admin/edit-exam/<%= exam._id %>" method="POST" enctype="multipart/form-data">
    <div class="row">
        <div class="col-md-8">
            <div class="card mb-4">
                <div class="card-body">
                    <h5 class="card-title">Exam Details</h5>
                    <div class="mb-3">
                        <label for="subject" class="form-label">Subject Name</label>
                        <input type="text" class="form-control" id="subject" name="subject" value="<%= exam.subject || '' %>">
                    </div>
                    <div class="mb-3">
                        <label for="title" class="form-label">Exam Title</label>
                        <input type="text" class="form-control" id="title" name="title" value="<%= exam.title %>" required>
                    </div>
                    <div class="mb-3">
                        <label for="description" class="form-label">Description</label>
                        <textarea class="form-control" id="description" name="description" rows="3" required><%= exam.description %></textarea>
                    </div>
                    <div class="mb-3">
                        <label for="duration" class="form-label">Duration (minutes)</label>
                        <input type="number" class="form-control" id="duration" name="duration" min="1" value="<%= exam.duration %>" required>
                    </div>
                    <div class="form-check form-switch mb-3">
                        <input class="form-check-input" type="checkbox" role="switch" id="revealAnswersToStudents" name="revealAnswersToStudents" <%= exam.revealAnswersToStudents ? 'checked' : '' %>>
                        <label class="form-check-label" for="revealAnswersToStudents">Allow students to see correct answers in results</label>
                    </div>
                    <div class="mb-3">
                        <label for="category" class="form-label">Category</label>
                        <select class="form-select" id="category" name="category">
                            <option value="">-- Select Category (optional) --</option>
                            <% if (typeof categories !== 'undefined') { %>
                                <% categories.forEach(cat => { %>
                                    <option value="<%= cat._id %>" <%= exam.category && (String(exam.category) === String(cat._id) || (exam.category._id && String(exam.category._id) === String(cat._id))) ? 'selected' : '' %>><%= cat.name %></option>
                                <% }) %>
                            <% } %>
                        </select>
                    </div>
                </div>
            </div>

            <div class="card mb-4">
                <div class="card-body">
                    <h5 class="card-title mb-3">Edit Existing Questions</h5>
                    <% if (exam.questions && exam.questions.length) { %>
                        <% exam.questions.forEach(function(q, idx){ %>
                            <div class="border rounded p-3 mb-3">
                                <input type="hidden" name="existingQuestions[<%= idx %>][id]" value="<%= q._id %>">
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <h6 class="mb-0">Question <%= idx + 1 %></h6>
                                    <span class="badge bg-light text-dark text-capitalize"><%= q.type %></span>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Question Text</label>
                                    <input type="text" class="form-control" name="existingQuestions[<%= idx %>][text]" value="<%- q.question %>" required>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Question Type</label>
                                    <select class="form-select" name="existingQuestions[<%= idx %>][type]" onchange="toggleExistingOptions(this)" data-qid="ex-<%= idx %>">
                                        <option value="mcq" <%= q.type==='mcq'?'selected':'' %>>Multiple Choice (MCQ)</option>
                                        <option value="open" <%= q.type==='open'?'selected':'' %>>Open-ended</option>
                                        <option value="image" <%= q.type==='image'?'selected':'' %>>Image Question</option>
                                    </select>
                                </div>
                                <div class="mb-3 question-options" id="options-ex-<%= idx %>" style="display:<%= q.type==='mcq'?'':'none' %>">
                                    <label class="form-label">Options</label>
                                    <div class="row">
                                        <% [0,1,2,3].forEach(function(i){ %>
                                            <div class="col-md-6 mb-2">
                                                <div class="input-group">
                                                    <span class="input-group-text"><%= String.fromCharCode(65+i) %></span>
                                                    <input type="text" class="form-control" name="existingQuestions[<%= idx %>][options][<%= i %>]" value="<%- (q.options && q.options[i]) ? q.options[i] : '' %>">
                                                </div>
                                            </div>
                                        <% }) %>
                                    </div>
                                </div>
                                <div class="mb-3 question-image" id="image-ex-<%= idx %>" style="display:<%= q.type==='image'?'':'none' %>">
                                    <label class="form-label">Upload Image</label>
                                    <input type="file" accept="image/*" class="form-control" data-qid="ex-<%= idx %>" onchange="encodeExistingImage(this)">
                                    <input type="hidden" name="existingQuestions[<%= idx %>][imageBase64]" id="img64-ex-<%= idx %>">
                                    <div class="mt-2">
                                        <img id="preview-ex-<%= idx %>" src="<%= q.imagePath || '' %>" alt="Preview" style="max-width: 100%; <%= q.imagePath ? '' : 'display:none;' %>" class="img-fluid rounded border">
                                    </div>
                                </div>
                                <div class="mb-3 question-answers" id="answers-ex-<%= idx %>" style="display:<%= (q.type==='open' || q.type==='image')?'':'none' %>">
                                    <label class="form-label">Accepted Answers (comma-separated)</label>
                                    <input type="text" class="form-control" name="existingQuestions[<%= idx %>][acceptedAnswers]" value="<%- (q.acceptedAnswers && q.acceptedAnswers.join(', ')) || '' %>">
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <label class="form-label">Correct Answer</label>
                                        <select class="form-select" name="existingQuestions[<%= idx %>][correctAnswer]" id="correct-ex-<%= idx %>">
                                            <option value="">Select correct option (if MCQ)</option>
                                            <option value="0" <%= q.correctAnswer === 0 ? 'selected' : '' %>>A</option>
                                            <option value="1" <%= q.correctAnswer === 1 ? 'selected' : '' %>>B</option>
                                            <option value="2" <%= q.correctAnswer === 2 ? 'selected' : '' %>>C</option>
                                            <option value="3" <%= q.correctAnswer === 3 ? 'selected' : '' %>>D</option>
                                        </select>
                                    </div>
                                    <div class="col-md-6">
                                        <label class="form-label">Points</label>
                                        <input type="number" class="form-control" name="existingQuestions[<%= idx %>][points]" value="<%= q.points || 1 %>" min="1">
                                    </div>
                                </div>
                            </div>
                        <% }) %>
                    <% } else { %>
                        <div class="alert alert-info mb-0"><i class="bi bi-info-circle"></i> This exam has no questions yet.</div>
                    <% } %>
                </div>
            </div>

            <div class="card">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-3 sticky-top bg-white py-2 border-bottom" style="z-index: 1020;">
                        <h5 class="card-title mb-0">Add More Questions</h5>
                        <button type="button" class="btn btn-success" onclick="addQuestion()">
                            <i class="bi bi-plus"></i> Add Question
                        </button>
                    </div>
                    <div id="questionsContainer">
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="sticky-aside">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Instructions</h5>
                    <ul class="list-unstyled">
                        <li><i class="bi bi-info-circle text-info"></i> You can update exam details.</li>
                        <li><i class="bi bi-info-circle text-info"></i> New questions will be appended.</li>
                        <li><i class="bi bi-info-circle text-info"></i> MCQ/Open/Image questions supported.</li>
                    </ul>
                    <div class="d-grid mt-3">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-circle"></i> Save Changes
                        </button>
                    </div>
                </div>
            </div>
            </div>
        </div>
    </div>
</form>

<script>
let questionCount = 0;

function addQuestion() {
    questionCount++;
    const questionHtml = `
        <div class="card mb-3" id="question-${questionCount}">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h6 class="mb-0">New Question ${questionCount}</h6>
                    <button type="button" class="btn btn-sm btn-danger" onclick="removeQuestion(${questionCount})">
                        <i class="bi bi-trash"></i>
                    </button>
                </div>
                <div class="mb-3">
                    <label class="form-label">Question Text</label>
                    <input type="text" class="form-control" name="questions[${questionCount-1}][text]" required>
                </div>
                <div class="mb-3">
                    <label class="form-label">Question Type</label>
                    <select class="form-select" name="questions[${questionCount-1}][type]" onchange="toggleOptions(this)" data-qid="${questionCount-1}">
                        <option value="mcq">Multiple Choice (MCQ)</option>
                        <option value="open">Open-ended (no options)</option>
                        <option value="image">Image Question</option>
                    </select>
                </div>
                <div class="mb-3 question-options" id="options-${questionCount-1}">
                    <label class="form-label">Options</label>
                    <div class="row">
                        ${[0,1,2,3].map(i => `
                            <div class="col-md-6 mb-2">
                                <div class="input-group">
                                    <span class="input-group-text">${String.fromCharCode(65+i)}</span>
                                    <input type="text" class="form-control" 
                                           name="questions[${questionCount-1}][options][${i}]">
                                </div>
                            </div>
                        `).join('')}
                    </div>
                </div>
                <div class="mb-3 question-image" id="image-${questionCount-1}" style="display:none;">
                    <label class="form-label">Upload Image</label>
                    <input type="file" accept="image/*" class="form-control" name="questionImages">
                    <div class="form-text">Max size depends on server limits.</div>
                </div>
                <div class="mb-3 question-answers" id="answers-${questionCount-1}" style="display:none;">
                    <label class="form-label">Accepted Answers (comma-separated)</label>
                    <input type="text" class="form-control" name="questions[${questionCount-1}][acceptedAnswers]" placeholder="e.g. photosynthesis, photo synthesis">
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <label class="form-label">Correct Answer</label>
                        <select class="form-select" name="questions[${questionCount-1}][correctAnswer]" id="correct-${questionCount-1}">
                            <option value="">Select correct option (if MCQ)</option>
                            <option value="0">A</option>
                            <option value="1">B</option>
                            <option value="2">C</option>
                            <option value="3">D</option>
                        </select>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Points</label>
                        <input type="number" class="form-control" 
                               name="questions[${questionCount-1}][points]" 
                               value="1" min="1">
                    </div>
                </div>
            </div>
        </div>
    `;
    document.getElementById('questionsContainer').insertAdjacentHTML('beforeend', questionHtml);
    const sel = document.querySelector(`select[name="questions[${questionCount-1}][type]"]`);
    if (sel) toggleOptions(sel);
}

function removeQuestion(id) {
    if (confirm('Are you sure you want to remove this question?')) {
        document.getElementById(`question-${id}`).remove();
    }
}

function toggleOptions(selectEl) {
    const qid = selectEl.dataset.qid;
    const val = selectEl.value;
    const optionsDiv = document.getElementById(`options-${qid}`);
    const correctSel = document.getElementById(`correct-${qid}`);
    const imageDiv = document.getElementById(`image-${qid}`);
    if (val === 'open') {
        if (optionsDiv) optionsDiv.style.display = 'none';
        if (correctSel) { correctSel.disabled = true; correctSel.required = false; }
        if (optionsDiv) { optionsDiv.querySelectorAll('input').forEach(i => { i.required = false; i.value = ''; }); }
        if (imageDiv) imageDiv.style.display = 'none';
        const ansDiv = document.getElementById(`answers-${qid}`);
        if (ansDiv) ansDiv.style.display = '';
    } else {
        if (val === 'mcq') {
            if (optionsDiv) optionsDiv.style.display = '';
            if (correctSel) { correctSel.disabled = false; correctSel.required = true; }
            if (optionsDiv) { optionsDiv.querySelectorAll('input').forEach(i => { i.required = true; }); }
            if (imageDiv) imageDiv.style.display = 'none';
            const ansDiv = document.getElementById(`answers-${qid}`);
            if (ansDiv) ansDiv.style.display = 'none';
        } else if (val === 'image') {
            if (optionsDiv) optionsDiv.style.display = 'none';
            if (correctSel) { correctSel.disabled = true; correctSel.required = false; correctSel.value = ''; }
            if (optionsDiv) { optionsDiv.querySelectorAll('input').forEach(i => { i.required = false; i.value = ''; }); }
            if (imageDiv) imageDiv.style.display = '';
            const ansDiv = document.getElementById(`answers-${qid}`);
            if (ansDiv) ansDiv.style.display = '';
        }
    }
}

function toggleExistingOptions(selectEl) {
    const qid = selectEl.dataset.qid; // ex-<idx>
    const val = selectEl.value;
    const optionsDiv = document.getElementById(`options-${qid}`);
    const correctSel = document.getElementById(`correct-${qid}`);
    const imageDiv = document.getElementById(`image-${qid}`);
    const ansDiv = document.getElementById(`answers-${qid}`);
    if (val === 'open') {
        if (optionsDiv) optionsDiv.style.display = 'none';
        if (correctSel) { correctSel.disabled = true; correctSel.required = false; }
        if (imageDiv) imageDiv.style.display = 'none';
        if (ansDiv) ansDiv.style.display = '';
    } else if (val === 'mcq') {
        if (optionsDiv) optionsDiv.style.display = '';
        if (correctSel) { correctSel.disabled = false; correctSel.required = true; }
        if (imageDiv) imageDiv.style.display = 'none';
        if (ansDiv) ansDiv.style.display = 'none';
    } else if (val === 'image') {
        if (optionsDiv) optionsDiv.style.display = 'none';
        if (correctSel) { correctSel.disabled = true; correctSel.required = false; correctSel.value = ''; }
        if (imageDiv) imageDiv.style.display = '';
        if (ansDiv) ansDiv.style.display = '';
    }
}

function encodeExistingImage(inputEl) {
    const file = inputEl.files && inputEl.files[0];
    const qid = inputEl.getAttribute('data-qid'); // ex-<idx>
    if (!file || !qid) return;
    const reader = new FileReader();
    reader.onload = function(e){
        const dataUrl = e.target.result;
        const hidden = document.getElementById(`img64-${qid}`);
        const prev = document.getElementById(`preview-${qid}`);
        if (hidden) hidden.value = dataUrl;
        if (prev) { prev.src = dataUrl; prev.style.display = ''; }
    };
    reader.readAsDataURL(file);
}
</script>

<%- include('../partials/footer') %>

