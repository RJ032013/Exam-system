<%- include('../partials/header', { title: 'Create Exam' }) %>

<div class="row">
    <div class="col-12">
        <h2 class="mb-4">
            <i class="bi bi-plus-circle"></i> Create New Exam
        </h2>
    </div>
</div>

<form id="examForm" action="/admin/create-exam" method="POST" enctype="multipart/form-data">
    <div class="row">
        <div class="col-md-8">
            <div class="card mb-4">
                <div class="card-body">
                    <h5 class="card-title">Exam Details</h5>
                    <div class="mb-3">
                        <label for="subject" class="form-label">Subject Name</label>
                        <input type="text" class="form-control" id="subject" name="subject" placeholder="e.g. Mathematics" >
                    </div>
                    <div class="mb-3">
                        <label for="title" class="form-label">Exam Title</label>
                        <input type="text" class="form-control" id="title" name="title" required>
                    </div>
                    <div class="mb-3">
                        <label for="description" class="form-label">Description</label>
                        <textarea class="form-control" id="description" name="description" rows="3" required></textarea>
                    </div>
                    <div class="mb-3">
                        <label for="duration" class="form-label">Duration (minutes)</label>
                        <input type="number" class="form-control" id="duration" name="duration" min="1" required>
                    </div>
                    <div class="mb-3">
                        <label for="category" class="form-label">Category</label>
                        <select class="form-select" id="category" name="category">
                            <option value="">-- Select Category (optional) --</option>
                            <% if (typeof categories !== 'undefined') { %>
                                <% categories.forEach(cat => { %>
                                    <option value="<%= cat._id %>"><%= cat.name %></option>
                                <% }) %>
                            <% } %>
                        </select>
                    </div>
                </div>
            </div>

            <div class="card">
                <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center mb-3 sticky-top bg-white py-2 border-bottom" style="z-index: 1020;">
                            <h5 class="card-title mb-0">Questions</h5>
                            <button type="button" class="btn btn-success" onclick="addQuestion()">
                                <i class="bi bi-plus"></i> Add Question
                            </button>
                        </div>
                        <div class="d-flex gap-2 mb-3">
                            <a class="btn btn-outline-secondary" href="/admin/download-mcq-template">
                                <i class="bi bi-download"></i> Download MCQ Template
                            </a>
                            <label class="btn btn-outline-primary mb-0">
                                <i class="bi bi-upload"></i> Import MCQ Excel/CSV
                                <input type="file" id="mcqExcel" accept=".xlsx,.xls,.csv" hidden>
                            </label>
                        </div>
                    <div id="questionsContainer">
                        <!-- Questions will be added here dynamically -->
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="sticky-aside">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Instructions</h5>
                    <ul class="list-unstyled">
                        <li><i class="bi bi-info-circle text-info"></i> Fill in exam details first</li>
                        <li><i class="bi bi-info-circle text-info"></i> Add at least one question</li>
                        <li><i class="bi bi-info-circle text-info"></i> MCQ: provide options and correct answer</li>
                        <li><i class="bi bi-info-circle text-info"></i> Open-ended: no options required</li>
                        <li><i class="bi bi-info-circle text-info"></i> Image: upload an image and optional prompt</li>
                        <li><i class="bi bi-info-circle text-info"></i> Set points for each question</li>
                    </ul>
                    <div class="d-grid mt-3">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-circle"></i> Create Exam
                        </button>
                    </div>
                </div>
            </div>
            </div>
        </div>
    </div>
</form>

<script>
let questionCount = 0;

function addQuestion() {
    questionCount++;
    const questionHtml = `
        <div class="card mb-3" id="question-${questionCount}">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h6 class="mb-0">Question ${questionCount}</h6>
                    <button type="button" class="btn btn-sm btn-danger" onclick="removeQuestion(${questionCount})">
                        <i class="bi bi-trash"></i>
                    </button>
                </div>
                <div class="mb-3">
                    <label class="form-label">Question Text</label>
                    <input type="text" class="form-control" name="questions[${questionCount-1}][text]" required>
                </div>
                <div class="mb-3">
                    <label class="form-label">Question Type</label>
                    <select class="form-select" name="questions[${questionCount-1}][type]" onchange="toggleOptions(this)" data-qid="${questionCount-1}">
                        <option value="mcq">Multiple Choice (MCQ)</option>
                        <option value="open">Open-ended (no options)</option>
                        <option value="image">Image Question</option>
                    </select>
                </div>
                <div class="mb-3 question-options" id="options-${questionCount-1}">
                    <label class="form-label">Options</label>
                    <div class="row">
                        ${[0,1,2,3].map(i => `
                            <div class="col-md-6 mb-2">
                                <div class="input-group">
                                    <span class="input-group-text">${String.fromCharCode(65+i)}</span>
                                    <input type="text" class="form-control" 
                                           name="questions[${questionCount-1}][options][${i}]">
                                </div>
                            </div>
                        `).join('')}
                    </div>
                </div>
                <div class="mb-3 question-image" id="image-${questionCount-1}" style="display:none;">
                    <label class="form-label">Upload Image</label>
                    <input type="file" accept="image/*" class="form-control" data-qid="${questionCount-1}" onchange="encodeImageToBase64(this)">
                    <input type="hidden" name="questions[${questionCount-1}][imageBase64]" id="img64-${questionCount-1}">
                    <div class="mt-2">
                        <img id="preview-${questionCount-1}" src="" alt="Preview" style="max-width: 100%; display: none;" class="img-fluid rounded border">
                    </div>
                    <div class="form-text">Image will be embedded as base64 (no file stored).</div>
                </div>
                <div class="mb-3 question-answers" id="answers-${questionCount-1}" style="display:none;">
                    <label class="form-label">Accepted Answers (comma-separated)</label>
                    <input type="text" class="form-control" name="questions[${questionCount-1}][acceptedAnswers]" placeholder="e.g. photosynthesis, photo synthesis">
                    <div class="form-text">Used to auto-grade open/image questions. Case-insensitive; accents ignored.</div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <label class="form-label">Correct Answer</label>
                        <select class="form-select" name="questions[${questionCount-1}][correctAnswer]" id="correct-${questionCount-1}">
                            <option value="">Select correct option (if MCQ)</option>
                            <option value="0">A</option>
                            <option value="1">B</option>
                            <option value="2">C</option>
                            <option value="3">D</option>
                        </select>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Points</label>
                        <input type="number" class="form-control" 
                               name="questions[${questionCount-1}][points]" 
                               value="1" min="1">
                    </div>
                </div>
            </div>
        </div>
    `;
    document.getElementById('questionsContainer').insertAdjacentHTML('beforeend', questionHtml);
    // After inserting, ensure the options visibility/required state is correct for this question
    const sel = document.querySelector(`select[name="questions[${questionCount-1}][type]"]`);
    if (sel) toggleOptions(sel);
}

function removeQuestion(id) {
    if (confirm('Are you sure you want to remove this question?')) {
        document.getElementById(`question-${id}`).remove();
    }
}

// Add first question by default
addQuestion();

// Toggle options visibility based on question type select
function toggleOptions(selectEl) {
    const qid = selectEl.dataset.qid;
    const val = selectEl.value;
    const optionsDiv = document.getElementById(`options-${qid}`);
    const correctSel = document.getElementById(`correct-${qid}`);
    const imageDiv = document.getElementById(`image-${qid}`);
    if (val === 'open') {
        if (optionsDiv) optionsDiv.style.display = 'none';
        if (correctSel) { correctSel.disabled = true; correctSel.required = false; }
        // remove required from option inputs
        if (optionsDiv) {
            optionsDiv.querySelectorAll('input').forEach(i => { i.required = false; i.value = ''; });
        }
        if (imageDiv) imageDiv.style.display = 'none';
        const ansDiv = document.getElementById(`answers-${qid}`);
        if (ansDiv) ansDiv.style.display = '';
    } else {
        if (val === 'mcq') {
            if (optionsDiv) optionsDiv.style.display = '';
            if (correctSel) { correctSel.disabled = false; correctSel.required = true; }
            // make option inputs required
            if (optionsDiv) {
                optionsDiv.querySelectorAll('input').forEach(i => { i.required = true; });
            }
            if (imageDiv) imageDiv.style.display = 'none';
            const ansDiv = document.getElementById(`answers-${qid}`);
            if (ansDiv) ansDiv.style.display = 'none';
        } else if (val === 'image') {
            if (optionsDiv) optionsDiv.style.display = 'none';
            if (correctSel) { correctSel.disabled = true; correctSel.required = false; correctSel.value = ''; }
            if (optionsDiv) {
                optionsDiv.querySelectorAll('input').forEach(i => { i.required = false; i.value = ''; });
            }
            if (imageDiv) imageDiv.style.display = '';
            const ansDiv = document.getElementById(`answers-${qid}`);
            if (ansDiv) ansDiv.style.display = '';
        }
    }
}

// Ensure the server can map uploaded file to question index by setting originalname proxy
function setImageFieldName(inputEl) {
    // Multer cannot read custom attributes for mapping, we'll set a hidden text input carrying the desired originalname
    const desired = inputEl.getAttribute('data-filename');
    // Create a sibling hidden field to carry the mapping index
    let hidden = inputEl.parentElement.querySelector('input[type="hidden"][name="questionImageNames[]"]');
    if (!hidden) {
        hidden = document.createElement('input');
        hidden.type = 'hidden';
        hidden.name = 'questionImageNames[]';
        inputEl.parentElement.appendChild(hidden);
    }
    hidden.value = desired;
}

// Import MCQ from Excel/CSV
function encodeImageToBase64(inputEl) {
    const file = inputEl.files && inputEl.files[0];
    const qid = inputEl.getAttribute('data-qid');
    if (!file || !qid) return;
    const reader = new FileReader();
    reader.onload = function(e){
        const dataUrl = e.target.result;
        const hidden = document.getElementById(`img64-${qid}`);
        const prev = document.getElementById(`preview-${qid}`);
        if (hidden) hidden.value = dataUrl;
        if (prev) { prev.src = dataUrl; prev.style.display = ''; }
    };
    reader.readAsDataURL(file);
}

// Import MCQ from Excel/CSV
document.getElementById('mcqExcel').addEventListener('change', function(){
    const file = this.files && this.files[0];
    if (!file) return;
    const form = new FormData();
    form.append('mcqExcel', file);
    fetch('/admin/import-mcq-excel', { method: 'POST', body: form })
        .then(r => r.json())
        .then(data => {
            if (!data || !data.ok) {
                alert('Failed to import questions');
                return;
            }
            const qs = Array.isArray(data.questions) ? data.questions : [];
            if (qs.length === 0) { this.value = ''; return; }
            // Use first empty slot if available, otherwise append
            const firstText = document.querySelector('input[name="questions[0][text]"]');
            const firstBlank = firstText && !firstText.value.trim();
            if (firstBlank) {
                setQuestionFields(0, qs[0]);
                for (let i = 1; i < qs.length; i++) insertImportedQuestion(qs[i]);
            } else {
                qs.forEach(q => insertImportedQuestion(q));
            }
            this.value = '';
        })
        .catch(() => { alert('Upload failed'); this.value=''; });
});

function insertImportedQuestion(q) {
    addQuestion();
    const idx = questionCount - 1;
    setQuestionFields(idx, q);
}

function setQuestionFields(idx, q) {
    // q: { type:'mcq', text, options[], correctAnswer, points }
    const textInput = document.querySelector(`input[name="questions[${idx}][text]"]`);
    const typeSelect = document.querySelector(`select[name="questions[${idx}][type]"]`);
    const pointsInput = document.querySelector(`input[name="questions[${idx}][points]"]`);
    if (textInput) textInput.value = q.text || '';
    if (typeSelect) { typeSelect.value = 'mcq'; toggleOptions(typeSelect); }
    if (Array.isArray(q.options)) {
        q.options.slice(0,4).forEach((opt, i) => {
            const optInput = document.querySelector(`input[name=\"questions[${idx}][options][${i}]\"]`);
            if (optInput) optInput.value = String(opt);
        });
    }
    const correctSel = document.getElementById(`correct-${idx}`);
    if (correctSel && q.correctAnswer !== null && q.correctAnswer !== undefined) {
        correctSel.value = String(q.correctAnswer);
    }
    if (pointsInput) pointsInput.value = q.points || 1;
}
</script>

<%- include('../partials/footer') %>

<!-- Floating Add Question Button -->
<button type="button" class="btn btn-success fab-add-question" onclick="addQuestion()" title="Add Question">
    <i class="bi bi-plus-lg"></i>
</button>