<%- include('./partials/header', { title: 'Home' , messages: typeof messages !=='undefined' ? messages : {}, user:
  typeof user !=='undefined' ? user : null }) %>

  <div class="container py-2">
    <div class="row justify-content-center align-items-center mb-5">
      <div class="col-12 col-md-12 col-lg-12">
        <div class="bg-primary text-white rounded shadow p-4 p-md-5 text-center">
          <h1 class="display-5 mb-3">
            <i class="bi bi-mortarboard-fill"></i> Welcome to ExamSystem
          </h1>
          <p class="lead mb-4">A comprehensive online examination platform for students and educators.</p>
          <% if (!user) { %>
            <a href="/register" class="btn btn-light btn-lg me-2 mb-2">
              <i class="bi bi-person-plus"></i> Get Started
            </a>
            <a href="/login" class="btn btn-outline-light btn-lg mb-2">
              <i class="bi bi-box-arrow-in-right"></i> Login
            </a>
            <% } else { %>
              <a href="/exams" class="btn btn-light btn-lg mb-2">
                <i class="bi bi-list-check"></i> View Exams
              </a>
              <% if (user.role==='admin' ) { %>
                <a href="/admin/dashboard" class="btn btn-outline-light btn-lg ms-2 mb-2">
                  <i class="bi bi-speedometer2"></i> Admin Dashboard
                </a>
                <% } %>
                  <% } %>
        </div>
      </div>
    </div>

    <div class="row g-4 mb-5 justify-content-center">
      <div class="col-12 col-md-4">
        <div class="card h-100 border-0 shadow" style="box-shadow: 0 2px 8px rgba(0,0,0,0.08);">
          <div class="card-body text-center py-4">
            <i class="bi bi-clock-history" style="font-size: 3rem; color: #0d6efd;"></i>
            <h5 class="card-title mt-3">Timed Exams</h5>
            <p class="card-text">Take exams with automatic timing and submission when time expires.</p>
          </div>
        </div>
      </div>
      <div class="col-12 col-md-4">
        <div class="card h-100 border-0 shadow" style="box-shadow: 0 2px 8px rgba(0,0,0,0.08);">
          <div class="card-body text-center py-4">
            <i class="bi bi-award" style="font-size: 3rem; color: #0d6efd;"></i>
            <h5 class="card-title mt-3">Instant Results</h5>
            <p class="card-text">Get immediate feedback with detailed results and question review.</p>
          </div>
        </div>
      </div>
      <div class="col-12 col-md-4">
        <div class="card h-100 border-0 shadow" style="box-shadow: 0 2px 8px rgba(0,0,0,0.08);">
          <div class="card-body text-center py-4">
            <i class="bi bi-shield-check" style="font-size: 3rem; color: #0d6efd;"></i>
            <h5 class="card-title mt-3">Secure Platform</h5>
            <p class="card-text">Your data is protected with secure authentication and encryption.</p>
          </div>
        </div>
      </div>
    </div>

    <% if (!user) { %>
      <div class="row justify-content-center">
        <div class="col-12 col-md-12 col-lg-12">
          <div class="card border-0 shadow"  style="box-shadow: 0 2px 8px rgba(0,0,0,0.08);">
            <div class="card-body py-4">
              <h3 class="card-title text-center mb-4">How It Works</h3>
              <div class="row g-4">
                <div class="col-12 col-md-4 text-center">
                  <div
                    class="rounded-circle bg-primary text-white d-inline-flex align-items-center justify-content-center mb-3"
                    style="width:48px;height:48px;font-size:1.5rem;">1</div>
                  <h5>Register</h5>
                  <p class="mb-0">Create your account as a student or administrator</p>
                </div>
                <div class="col-12 col-md-4 text-center">
                  <div
                    class="rounded-circle bg-primary text-white d-inline-flex align-items-center justify-content-center mb-3"
                    style="width:48px;height:48px;font-size:1.5rem;">2</div>
                  <h5>Take Exams</h5>
                  <p class="mb-0">Access available exams and complete them within the time limit</p>
                </div>
                <div class="col-12 col-md-4 text-center">
                  <div
                    class="rounded-circle bg-primary text-white d-inline-flex align-items-center justify-content-center mb-3"
                    style="width:48px;height:48px;font-size:1.5rem;">3</div>
                  <h5>View Results</h5>
                  <p class="mb-0">Check your scores and review your performance</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <% } %>
  </div>

  <%- include('./partials/footer') %>