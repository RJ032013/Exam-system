<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Exam System - <%= title || 'Home' %></title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/css/style.css">
    <% if (typeof SOCKET_IO !== 'undefined' && SOCKET_IO) { %>
    <script src="/socket.io/socket.io.js"></script>
    <script>
      (function(){
        try {
          window.__appSocket = io();
          <% if (user) { %>
            window.__appSocket.emit('join-user', '<%= user._id %>');
          <% } %>
        } catch(e) {}
      })();
    </script>
    <% } %>
</head>
<% const isAdminLayout = typeof layout !== 'undefined' && layout === 'admin'; %>
<% const activeNavKey = typeof activeNav !== 'undefined' ? activeNav : ''; %>
<body class="has-topbar <%= isAdminLayout ? 'admin-layout' : '' %>">
    <nav class="navbar navbar-expand-lg topbar sticky-top shadow-sm">
        <div class="container-fluid px-4">
            <div class="d-flex align-items-center gap-2">
                <% if (isAdminLayout) { %>
                    <button class="btn btn-outline-light btn-sm d-lg-none sidebar-toggle" type="button" data-sidebar-toggle>
                        <i class="bi bi-list"></i>
                    </button>
                <% } %>
                <a class="navbar-brand d-flex align-items-center gap-2" href="/">
                    <i class="bi bi-mortarboard-fill fs-4"></i>
                    <span class="fw-semibold">ExamSystem</span>
                </a>
            </div>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav" aria-controls="mainNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="mainNav">
                <ul class="navbar-nav me-auto align-items-lg-center">
                    <li class="nav-item">
                        <a class="nav-link <%= activeNavKey === 'home' ? 'active' : '' %>" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link <%= activeNavKey === 'exams' ? 'active' : '' %>" href="/exams">Exams</a>
                    </li>
                    <% if (user && user.role === 'admin') { %>
                    <li class="nav-item">
                        <a class="nav-link <%= activeNavKey === 'admin' ? 'active' : '' %>" href="/admin/dashboard">Admin</a>
                    </li>
                    <% } %>
                </ul>
                <ul class="navbar-nav ms-auto">
                    <% if (user) { %>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle d-flex align-items-center gap-2" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <span class="avatar-circle">
                                    <i class="bi bi-person"></i>
                                </span>
                                <span class="fw-medium"><%= user.username %></span>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end shadow-sm">
                                <li><a class="dropdown-item" href="/profile">Profile</a></li>
                                <li><a class="dropdown-item" href="/settings">Settings</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item text-danger" href="/logout">Logout</a></li>
                            </ul>
                        </li>
                    <% } else { %>
                        <li class="nav-item">
                            <a class="nav-link" href="/login">Login</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/register">Register</a>
                        </li>
                    <% } %>
                </ul>
            </div>
        </div>
    </nav>

    <main class="<%= isAdminLayout ? 'admin-main' : 'page-main container py-5' %>">
        <% if (messages && messages.error && messages.error.length > 0) { %>
            <div class="<%= isAdminLayout ? 'container-fluid px-4 pt-4' : '' %>">
                <div class="alert alert-danger alert-dismissible fade show shadow-sm" role="alert">
                    <%= messages.error[0] %>
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            </div>
        <% } %>
        <% if (messages && messages.success && messages.success.length > 0) { %>
            <div class="<%= isAdminLayout ? 'container-fluid px-4 pt-4' : '' %>">
                <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
                    <%= messages.success[0] %>
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            </div>
        <% } %>