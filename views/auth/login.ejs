<style>
    body {
        background: linear-gradient(135deg, #e3f0ff 0%, #ffffff 100%) !important;
        min-height: 100vh;
        overflow: hidden;
    }
    .login-bg {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
    }
</style>
<%- include('../partials/header', { title: 'Login', messages: typeof messages !== 'undefined' ? messages : {}, user: typeof user !== 'undefined' ? user : null }) %>

<div class="login-bg">
    <div class="col-12 col-md-8 col-lg-5 mx-auto">
        <div class="card shadow border-0" style="box-shadow: 0 2px 8px rgba(0,0,0,0.08); background-color: #fff;">
            <div class="card-body p-4 p-md-5">
                <h3 class="card-title text-center mb-4">
                    <i class="bi bi-box-arrow-in-right"></i> Login
                </h3>
                <form action="/login" method="POST" id="loginForm" autocomplete="off">
                    <div class="row g-3">
                        <div class="col-12">
                            <label for="username" class="form-label">Username</label>
                            <input type="text" class="form-control" id="username" name="username" required>
                        </div>
                        <div class="col-12">
                            <label for="password" class="form-label">Password</label>
                            <input type="password" class="form-control" id="password" name="password" required>
                        </div>
                        <div class="col-12 d-grid mb-2">
                            <button type="submit" class="btn btn-primary">Login</button>
                        </div>
                    </div>
                </form>
                <div class="text-center mb-2">
                    <span>or</span>
                </div>
                <div class="d-grid mb-2">
                    <a href="/auth/google" class="btn btn-outline-primary">
                        <i class="bi bi-google"></i> Login with Google
                    </a>
                </div>
                <div class="text-center mt-3">
                    <p>Don't have an account? <a href="/register">Register here</a></p>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>