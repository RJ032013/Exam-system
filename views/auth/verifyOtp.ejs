<style>
  body {
    background: linear-gradient(135deg, #e3f0ff 0%, #ffffff 100%) !important;
    min-height: 100vh;
    overflow: hidden;
  }
  .register-bg {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
  }
</style>
<%- include('../partials/header', { title: 'Verify OTP', messages: typeof messages !== 'undefined' ? messages : {}, user: typeof user !== 'undefined' ? user : null }) %>

<div class="register-bg">
  <div class="col-12 col-md-8 col-lg-5 mx-auto">
    <div class="card shadow border-0" style="box-shadow: 0 2px 8px rgba(0,0,0,0.08); background-color: #fff;">
      <div class="card-body p-4 p-md-5">
        <h3 class="card-title text-center mb-4">
          <i class="bi bi-shield-lock"></i> Verify OTP
        </h3>
        <form action="/verify-otp" method="POST" autocomplete="off">
            <% if (messages && messages.error) { %>
              <div class="alert alert-danger"><%= messages.error %></div>
            <% } %>
            <% if (messages && messages.success) { %>
              <div class="alert alert-success"><%= messages.success %></div>
            <% } %>
            <input type="hidden" name="email" value="<%= email %>" />
          <div class="mb-3">
            <label for="otp" class="form-label">Enter OTP sent to <%= email %>:</label>
            <input type="text" class="form-control" id="otp" name="otp" required maxlength="6">
          </div>
          <div class="d-grid mb-2">
            <button type="submit" class="btn btn-primary">Verify OTP</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>